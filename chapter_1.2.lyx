\begin_inset Formula \begin{eqnarray*}
f(x_{0}) & = & g(x_{0})\\
f'(x_{0}) & = & g'(x_{0})\\
f''(x_{0}) & = & g''(x_{0}).\end{eqnarray*}

\end_inset


